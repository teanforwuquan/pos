<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:id="@+id/return_shiftchang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_heightPercent = "20%"
    android:background="@color/colorLogin"
    >
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logoin"
        app:layout_widthPercent = "60%"
        />
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="登录"/>
       <ImageView
           android:id="@+id/login_in"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
           android:layout_toLeftOf="@id/login"
           android:layout_centerVertical="true"
           android:src="@drawable/login"/>
    </RelativeLayout>
    <View
        android:id="@+id/space"
        android:layout_below="@id/return_shiftchang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent = "2%"
        />
    <ImageView
        android:id="@+id/img_a"
        android:layout_below="@id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:src="@drawable/host_pos"/>
    <View
        android:id="@+id/space_a"
        android:layout_toRightOf="@id/img_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent = "5%"
        />
    <ImageView
        android:id="@+id/img_b"
        android:layout_below="@id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/space_a"
        android:src="@drawable/host_stock"/>
    <View
        android:id="@+id/space_b"
        android:layout_toRightOf="@id/img_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent = "5%"
        />
    <View
        android:id="@+id/space_c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_b"
        app:layout_heightPercent = "2%"
        />
    <ImageView
        android:id="@+id/img_d"
        android:layout_below="@id/space_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/space_a"
        android:src="@drawable/host_commodity"/>

    <ImageView
        android:id="@+id/img_e"
        android:layout_below="@id/img_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/space_a"
        android:src="@drawable/host_mumber"/>
    <ImageView
        android:id="@+id/img_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/host_shopping"
        android:layout_toRightOf="@id/img_d"
        android:layout_below="@id/space_c"

        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/img_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/host_orderforgoods"
        android:layout_toRightOf="@id/space_b"
        android:layout_below="@id/space"
        />
    <ImageView
        android:id="@+id/img_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/host_suplier"
        android:layout_toRightOf="@id/img_g"
        android:layout_below="@id/space"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/img_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/host_seller"
        android:layout_toRightOf="@id/img_g"
        android:layout_below="@id/img_h"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/img_j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/host_system"
        android:layout_toRightOf="@id/space_b"
        android:layout_below="@id/space_c"
        />

</android.support.percent.PercentRelativeLayout>