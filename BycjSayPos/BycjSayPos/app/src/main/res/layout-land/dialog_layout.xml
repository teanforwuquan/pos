<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_select"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dip"/>
      <ImageView
          android:id="@+id/image_detal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/cancel"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlog"/>
    <EditText
        android:id="@+id/businesscode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="请输入商家编码"
        android:gravity="center"
        android:background="@drawable/picture"
        />
    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="50dp"
       android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="请输入用户名"
        android:gravity="center"
        android:background="@drawable/picture"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="请输入密码"
        android:gravity="center"
        android:background="@drawable/picture"
        />
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cencalcol"
            android:text="取消"
            android:layout_marginLeft="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select"
            android:text="确认"
            android:textColor="@color/colorwhite"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>